<%- include('header') %>
<!--发表文章 -->
<div class="post-form">
    <form action="/post" method="post">
        <div class="form-group">
            <label for="title" class="sr-only"></label>
            <input type="text" class="form-control" id="title" name="title" placeholder="在此输入标题" required>
        </div>
        <div class="form-group">
            <label for="content">内容</label>
            <textarea class="form-control" rows="10" id="content" name="content" required></textarea>
        </div>
        <input type="submit" class="btn btn-primary btn-block" value="发表">
    </form>
</div>
<%- include('footer') %>