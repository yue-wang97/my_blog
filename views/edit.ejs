<%- include('header') %>
<!-- 修改文章 -->
<div class="post-form">
    <form method="post">
        <div class="form-group">
            <label for="title" class="sr-only">标题</label>
            <input type="text" class="form-control" id="title" name="title" value="<%= post.title %>" disabled="disabled">
        </div>
        <div class="form-group">
            <label for="content">内容</label>
            <textarea class="form-control" rows="10" id="content" name="content" required><%= post.content %></textarea>
        </div>
        <input type="submit" class="btn btn-primary btn-block" value="保存修改">
    </form>
</div>
<%- include('footer') %>